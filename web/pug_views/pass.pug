doctype html
head
  meta(charset='utf-8')
  title SafeEntry
  link(rel='stylesheet', href='/assets/css/v1/pass.css')
  //- Favicon
  link(rel='icon', href='/assets/favicon.svg', sizes='any', type='image/svg+xml')
  //- Fonts
  link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
  //- Analytics
  script(async, defer, data-domain='#{domain}', src='https://plausible.io/js/plausible.js')
#useHeader
  #useLogo
    img#useLogoImage(src='/assets/images/v1/se-logo-navbar.svg')
  #useBanner
    span#useBannerIcon.material-icons check_circle
    p#useBannerText Check in successful!
#useContent
  #usePass
    #usePassLogo
      img#usePassLogoImage(src='/assets/images/v1/sep.svg')
    #usePassContent
      #usePassContentTexts
        p#usePassContentLocation.usePassText #{location}
        p#usePassContentDate.usePassText #{date}
        p#usePassContentTime.usePassText #{time}
      #usePassGovTech
        img#usePassGovTechImage(src='/assets/images/v1/gt-logo.svg')
