doctype html
head
  include includes/pass_head.pug
  link(rel='stylesheet', href='/assets/css/v2/pass.css')
#useHeader
  #useLogo
    img#useLogoImage(src='/assets/images/v2/se-logo.svg')
#useContent
  #usePass
    img#usePassCheck(src='/assets/images/v2/success-green-1.svg')
    #usePassLogo
      img#usePassLogoImage(src='/assets/images/v2/se-checkin.svg')
    #usePassContent
      #usePassContentTexts
        p#usePassContentDate.usePassText #{date}
        p#usePassContentTime.usePassText #{time}
        p#usePassContentLocation.usePassText #{location}
      #usePassGovTech
        img#usePassGovTechImage(src='/assets/images/v2/gt-logo.svg')
